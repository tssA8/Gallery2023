<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/view_holder_color_width_2019"
    android:layout_height="@dimen/view_holder_color_height_2019"
    android:layout_marginTop="@dimen/view_holder_color_margin_top_2019"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/fl_color_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/color_item_selector"
        android:focusable="true">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image"
            android:layout_width="@dimen/view_holder_color_img_width_2019"
            android:layout_height="@dimen/view_holder_color_img_height_2019"
            android:layout_gravity="center"
            app:riv_oval="true" />

    </FrameLayout>

</LinearLayout>